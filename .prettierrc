{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 160,
    "plugins": ["@prettier/plugin-xml"],
    "overrides": [
        {
            "files": ["*.props", "*.targets", "*.*proj"],
            "options": {
                "parser": "xml"
            }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
